<div id="page-form" class="container">
    <main>
        <fieldset>
            <legend>Treino</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Treino.IdTreino" />
            <div class="select-block">
                <label asp-for="Treino.IdTreinoTemplate" class="control-label"></label>
                <select asp-for="Treino.IdTreinoTemplate" asp-items="@(new SelectList(Model.TreinosTemplate, "IdTreino", "Nome"))" class="form-control"></select>
            </div>

            <div class="textarea-block">
                <textarea name="descricao" rows="3" cols="61">Teste de text area para o app
                    </textarea>
            </div>

            <div class="rotinas">
                <div class="categorias">
                    <h3>Positional Play</h3>
                    <hr />
                    <ul class="rotinas-item">
                        @foreach (var item in Model.RotinasTemplate)
                        {
                            <li>
                                <input type="checkbox" id="">
                                <label for="">@item.Nome</label>
                                <div class="rotina-img">
                                    @if (item.Imagem != null)
                                    {
                                        <img id="imagem" src="@Url.Content(item.Imagem)" alt="Foto Rotina" width="100%" />
                                    }
                                    else
                                    {
                                        <img id="imagem" src="~/default-imagem/mesa.png" alt="Foto Rotina" width="100%" />
                                    }
                                    
                                </div>
                            </li>
                        }                        
                    </ul>
                </div>
